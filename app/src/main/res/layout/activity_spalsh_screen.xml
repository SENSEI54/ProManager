<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.splashScreen"
    android:orientation="vertical"
    android:background="@drawable/splash_bacground"
    android:gravity="center">

    <TextView
        android:id="@+id/splash_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/Splashtv_tittle_size"
        android:gravity="center"
        android:textColor="@color/colorAccentDark"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/splash_tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appintro"
        android:textSize="@dimen/Splashtv_intro_size"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

</LinearLayout>